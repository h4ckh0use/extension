{
  "manifest_version": 2,

  "name": "spooky name generator",
  "description": "now who's the impostor",
  "version": "1.0",

  "icons": {
    "128": "img/logo.png"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/contentScript.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "<all_urls>",
    "tabs"
  ],

  "web_accessible_resources": [
    "/emergencySound.mp3"
  ]
}